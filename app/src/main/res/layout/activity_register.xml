<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0AA1DD"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/silahkan_bu"
        android:layout_width="224dp"
        android:layout_height="33dp"
        android:text="@string/silahkan_bu"
        android:layout_marginBottom="30dp"
        android:textAppearance="@style/silahkan_bu"
        android:gravity="center_horizontal|top" />

    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:fontFamily="@font/Genos_Regular"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:gravity="center_horizontal|top"
            android:text="Nama"
            android:textAppearance="@style/nama" />
        <EditText
            android:id="@+id/etnamaregister"
            android:layout_width="329dp"
            android:layout_height="42dp"
            android:background="@drawable/edittext"
            android:fontFamily="@font/Genos_Regular"
            android:hint="Masukkan Nama"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="#0AA1DD"
            android:textColorHint="#0AA1DD"
            android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:fontFamily="@font/Genos_Regular"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:gravity="center_horizontal|top"
            android:text="No.Handphone"
            android:textAppearance="@style/nama" />
        <EditText
            android:id="@+id/etteleponregister"
            android:layout_width="329dp"
            android:layout_height="42dp"
            android:background="@drawable/edittext"
            android:fontFamily="@font/Genos_Regular"
            android:hint="Masukkan Nomor Handphone"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="#0AA1DD"
            android:textColorHint="#0AA1DD"
            android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:fontFamily="@font/Genos_Regular"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:gravity="center_horizontal|top"
            android:text="Email"
            android:textAppearance="@style/nama" />
        <EditText
            android:id="@+id/etemailregister"
            android:layout_width="329dp"
            android:layout_height="42dp"
            android:background="@drawable/edittext"
            android:fontFamily="@font/Genos_Regular"
            android:hint="Masukkan Email"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="#0AA1DD"
            android:textColorHint="#0AA1DD"
            android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:fontFamily="@font/Genos_Regular"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:gravity="center_horizontal|top"
            android:text="Password"
            android:textAppearance="@style/nama" />
        <EditText
            android:id="@+id/etpasswordregister"
            android:layout_width="329dp"
            android:layout_height="42dp"
            android:background="@drawable/edittext"
            android:fontFamily="@font/Genos_Regular"
            android:hint="Masukkan Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="#0AA1DD"
            android:textColorHint="#0AA1DD"
            android:textSize="15sp"/>
    </LinearLayout>
    
    <Button
        android:id="@+id/buatakun"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buat Akun"
        android:textStyle="bold"
        android:fontFamily="@font/Genos_Regular"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/cv_back">

        <ImageView
            android:id="@+id/itemimage"
            android:layout_width="208dp"
            android:layout_height="208dp"/>

        <TextView
            android:id="@+id/itemjudul"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_width="72dp"
            android:layout_height="18dp"
            android:textStyle="bold"
            android:fontFamily="@font/dmsans_medium"
            android:text="@string/malioboro"
            android:textAppearance="@style/malioboro"
            android:lineSpacingExtra="-2sp"
            android:gravity="center_horizontal|top" />

        <TextView
            android:id="@+id/itempenjelasan"
            android:fontFamily="@font/dmsans_medium"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:text="@string/kota_maliob"
            android:textAppearance="@style/kota_maliob"
            android:lineSpacingExtra="-2sp"
            android:gravity="top" />


    </LinearLayout>

</androidx.cardview.widget.CardView>